{
  "name": "task-management-server",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "postinstall": "node scripts/auto-switch-schema.js && prisma generate",
    "start": "prisma migrate deploy && node dist/index.js",
    "start:no-migrate": "node dist/index.js",
    "prisma:generate": "node scripts/auto-switch-schema.js && prisma generate",
    "prisma:migrate": "node scripts/auto-switch-schema.js && prisma migrate dev",
    "prisma:studio": "node scripts/auto-switch-schema.js && prisma studio",
    "prisma:reset": "node scripts/auto-switch-schema.js && prisma migrate reset",
    "schema:sqlite": "node scripts/switch-schema.js sqlite",
    "schema:postgresql": "node scripts/switch-schema.js postgresql",
    "seed": "node dist/scripts/seed.js"
  },
  "dependencies": {
    "@prisma/client": "^5.19.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-rate-limit": "^7.4.1",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^22.7.5",
    "prisma": "^5.19.1",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3"
  }
}
